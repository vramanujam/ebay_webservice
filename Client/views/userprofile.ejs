		<div class= "container" >
            <div class="panel panel-success" >
                <div class="panel-heading">
                    <h2 id="describe">User Information</h2>
                </div>

                <div class="panel-body">

                    <div class="row">
                        <div class="col-md-2">
                            <label  class="control-label">Firstname</label>
                        </div>
                        <div class="col-md-offset-1 col-md-9">
                            <label  class="control-label">{{userinfo[0].firstname}}</label>
                        </div>
                        
                    </div><br>
                    <div class="row">
                        <div class="col-md-2">
                            <label  class="control-label">Lastname</label>
                        </div>
                        <div class="col-md-offset-1 col-md-9">
                            <label  class="control-label">{{userinfo[0].lastname}}</label>
                        </div>
                        
                    </div><br>
                    <div class="row">
                        <div class="col-md-2">
                            <label  class="control-label">e-mail</label>
                        </div>
                        <div class="col-md-offset-1 col-md-9">
                            <label  class="control-label">{{userinfo[0].email}}</label>
                        </div>
                    </div><br>
                    <div class="row">
                        <div class="col-md-2">
                            <label  class="control-label">address</label>
                        </div>
                        <div ng-hide="address" class="col-md-offset-1 col-md-9">
                            <label  class="control-label">{{userinfo[0].address}}</label>
                        	<button type="button" ng-click = "addressclick()" class="btn btn-default btn-sm">
          						<span class="glyphicon glyphicon-pencil"></span> edit
        					</button>
                        </div>
                        <div ng-show="address"  class="col-md-offset-1 col-md-9">
                        	<textarea class="form-control" rows = "2"  ng-model="userinfo[0].address" ></textarea>
                        	<button type="button" ng-click = "updateinfo(addresstext,userinfo[0].address)" class="btn btn-default btn-sm">
          					Update
        					</button>
                        </div>
                    </div><br>
                    <div class="row">
                        <div class="col-md-2">
                            <label  class="control-label">birth date</label>
                        </div>
                        <div ng-hide = "birthday" class="col-md-offset-1 col-md-9">
                            <label  class="control-label">{{userinfo[0].birthdate}}</label>
                       		<button type="button" ng-click = "birthdayclick()" class="btn btn-default btn-sm">
          						<span class="glyphicon glyphicon-pencil"></span> edit
        					</button>
                        </div>
                        <div ng-show="birthday" class="col-md-offset-1 col-md-9">
                        	<div class="col-xs-2"><input type="text" class = "form-control input-sm" placeholder="yyyy-mm-dd" ng-model="userinfo[0].birthdate"></div>
                        	<button type="button" ng-click = "updateinfo(birthdaytext,userinfo[0].birthdate)" class="btn btn-default btn-sm">
          						Update
        					</button>
                        </div>
                        
                    </div><br>
                    <div class="row">
                        <div class="col-md-2">
                            <label  class="control-label">phoneno</label>
                        	
                        </div>
                        <div ng-hide = "phoneno" class="col-md-offset-1 col-md-9">
                            <label  class="control-label">{{userinfo[0].phonenumber}}</label>
                        	<button type="button" ng-click = "phonenoclick()" class="btn btn-default btn-sm">
          						<span class="glyphicon glyphicon-pencil"></span> edit
        					</button>
        				 </div>
    					<div ng-show="phoneno" class="col-md-offset-1 col-md-9">
                    		
                    		<div class="col-xs-2"><input type="text" class = "form-control input-sm" placeholder="xxx-xxx-xxxx" ng-model="userinfo[0].phonenumber"></div>
                    		
                    		<button type="button" ng-click = "updateinfo(phonenotext,userinfo[0].phonenumber)" class="btn btn-default btn-sm">
      							Update
    						</button>
                    	</div>
                       
                    </div><br>
                    <div class="row">
                        <div class="col-md-2">
                            <label  class="control-label">ebayhandle</label>
                        </div>
                        <div ng-hide = "ebayhandle" class="col-md-offset-1 col-md-9">
                            <label  class="control-label">{{userinfo[0].ebayhandle}}</label>
                        	<button type="button" ng-click = "ebayhandleclick()" class="btn btn-default btn-sm">
          						<span class="glyphicon glyphicon-pencil"></span> edit
        					</button>
                        </div>
                        	<div ng-show="ebayhandle" class="col-md-offset-1 col-md-9">
                    		<div class="col-xs-2"><input type="text" class = "form-control input-sm" ng-model="userinfo[0].ebayhandle"></div>
                    		<button type="button" ng-click = "updateinfo(ebayhandletext,userinfo[0].ebayhandle)" class="btn btn-default btn-sm">
      							Update
    						</button>
                    	</div>
                    </div><br>
                    <div class="row">
                        <div class="col-md-2">
                            <label  class="control-label">login time</label>
                        </div>
                        <div class="col-md-offset-1 col-md-9">
                            <label  class="control-label">{{userinfo[0].logintime}}</label>
                        </div>
                    </div><br>
                </div>
