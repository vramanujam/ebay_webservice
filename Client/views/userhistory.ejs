			  <form action="/addToCart" method = "post">
			      <div class="thumbnail" ">
			        <div class="caption">
			          <h3>{{post.itemname}}</h3>
                      <h4>Posted by {{post.sellerinformation}}</h4>
			          <p class="description"><ul>
			            <li>{{post.itemdescription}}</li>
			            
			            <!-- <li>Brand New</li>
			            <li>Available in all colors</li> -->
			          </ul></p>
			         
			          <div class="clearfix">                            
                            <div class="col-sm-6 col-md-6">
                                <div class="prices pull-left">Price:{{post.itemprice}} $</div><br>
                                <div class="prices pull-left"> Quantity: {{post.quantity}}</div><br>
                                <div class="prices pull-left"> {{post.transactiontype}} on : {{post.dateposted}}</div>
                            </div>
                                                                                          
                      </div>
			        </div>
			      </div>
			     </form>
			    </div>
			</div>
