        <form class="form-horizontal" action="/postad" method = "post">
        <div class= "container" ng-show = "test">
            <div class="panel panel-success" >
                <div class="panel-heading">
                    <h2 id="describe">Describe your item</h2>
                </div>

                <div class="panel-body">

                    <div class="row">
                        <div class="col-md-2">
                            <label for="title" class="control-label">Title</label>
                        </div>
                        <div class="col-md-offset-1 col-md-9">
                            <input type="text" ng-model="title" name="itemname" class="form-control" required="required" autofocus="autofocus"/>
                        </div>
                    </div><br>
                    <div class="row">
                        <div class="col-md-2">
                            <label for="description" class="control-label">Description</label>
                        </div>
                        <div class="col-md-offset-1 col-md-9">
                            <textarea ng-model="description" name="itemdescription" class="form-control" rows="4" required="required"></textarea>
                        </div>
                    </div><br>
                    <div class="row">
                        <div class="col-md-2">
                            <label for="quantity" class="control-label">Quantity</label>
                        </div>
                        <div class="col-md-offset-1 col-md-9">
                            <input type="number" ng-model="quantity" name="quantity" class="form-control" required="required" autofocus="autofocus"/>
                        </div>
                    </div><br>
					<div class="row">
                        <div class="col-md-2">
                            <label for="listformat" class="control-label">Listing format</label>
                        </div>
                        <div class="col-md-offset-1 col-md-9">
                            <div class="row">

                                <div class="col-md-5">
                                    <label><input type="radio" name="bidding" ng-click = "fixedprice()" value = "false" checked >Fixed Price</label>
                                </div>
                                <div class="col-md-offset-2 col-md-5">  
                                    <label><input type="radio" name="bidding" ng-click = "bid()" value = "true">Bidding</label>
                                </div>
                            </div>
                        </div>
                    </div><br>

                  
                    <div class="row">
                        <div class="col-md-2">
                            <label for="price" class="control-label">{{pricetag}}</label>
                        </div>
                        <div class="col-md-offset-1 col-md-9">
                            <input type="number" ng-model="Price" name="itemprice" class="form-control" required="required" autofocus="autofocus"/>
                        </div>
                    </div><br>
					
                </div>
            </div><br>
            
            <div class="row">
                <div class=" col-md-4 " align = "left">
                    <button type="submit" ng-click="submitData();" class="btn btn-success" id="Post your Ad!!!">Let everyone know !!! Post it !!</button>
                </div>                
            </div>
        </div>
    </form>
        
